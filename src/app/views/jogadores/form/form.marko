<html>
    <head>
        <title>Aplicação 1</title>
    </head>
    <body>
        <h1>Formulário de Jogador</h1>
        <form action='/jogadores' method='POST'>
            <if(data.jogadores.id)>
                <input type="hidden" name="_method" value="PUT">
            </if>
            
            <div>
                <label for='id'>ID:</label> 
                <input type='number' id='id' name='id' value='${data.jogadores.id}' placeholder='Digite um id aqui'/>
            </div>
            <div>
                <label for='name'>Nome:</label> 
                <input type='text' id='name' name='name' value='${data.jogadores.nome}' placeholder='Digite seu nome aqui'/>
            </div>
            <div>
                <label for='email'>Email:</label> 
                <input type='email' id='email' name='email' value='${data.jogadores.email}' placeholder='Digite seu email aqui'/>
            </div>
            <div>
                <input type='submit' value='Salvar'/>
            </div>
        </form>
    </body>
</html>